@model PagedList.IPagedList<Praesidium.Data_Models.Admin.ShUser>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="panel panel-heading">
    <h2>Users Admin Page</h2>
</div>

<div class="panel">
    <div style="">
        <div class="col-md-10">
            <h4><b>List of Users</b></h4>
        </div>
        <div class="col-md-2">
            <p>
                @Html.ActionLink("Create New", "UsersCreate", null, new { @class = "btn btn-info pull-right" })
            </p>
        </div>
        <br />
    </div>

    <table class="table panel table-striped">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th style="width: 165px;">
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShUserType.Type)
                </td>
                <td>
                    @Html.ActionLink(" ", "UsersEdit", new { id = item.RecId }, new { @class = "btn btn-info glyphicon glyphicon-edit", @title = "Edit User" })
                    @Html.ActionLink(" ", "UsersDetails", new { id = item.RecId }, new { @class = "btn btn-info glyphicon glyphicon-eye-open", @title = "View Details" })
                    @Html.ActionLink(" ", "UsersDelete", new { id = item.RecId }, new { @class = "btn btn-danger glyphicon glyphicon-trash", @title = "Delete Users" })
                </td>
            </tr>
        }
        
    </table>
    @if (Model.PageCount > 1)
    {
        <div style="text-align: center;">
            @Html.PagedListPager(Model, page => Url.Action("Sections",
         new { page }))
        </div>
    }
</div>
